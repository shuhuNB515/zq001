
---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CommonHeader from '@/components/common/CommonHeader.vue'
import AdminLayout from '@/components/common/AdminLayout.vue'
import PageHeader from '@/components/admin-package-search-and-export/PageHeader.vue'
import SearchBar from '@/components/admin-package-search-and-export/SearchBar.vue'
import PackageTable from '@/components/admin-package-search-and-export/PackageTable.vue'
import ExportButton from '@/components/admin-package-search-and-export/ExportButton.vue'
---

<BaseLayout title="快件搜索与导出 - 智取未来">
  <CommonHeader client:load variant="admin" />
  <AdminLayout client:load headerHeight="80px">
    <main class="flex-1 flex flex-col">
      <div class="flex-1 overflow-auto">
        <div class="container mx-auto px-4 py-8">
          <!-- Page Header -->
          <PageHeader client:idle />

          <!-- Search and Export Section -->
          <div class="space-y-6">
            <!-- Search Bar -->
            <SearchBar client:load />

            <!-- Export Button -->
            <div class="flex justify-end">
              <ExportButton client:load />
            </div>

            <!-- Package Table -->
            <PackageTable client:load />
          </div>
        </div>
      </div>
    </main>
  </AdminLayout>
</BaseLayout>
