
---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CommonHeader from '@/components/common/CommonHeader.vue'
import CommonFooter from '@/components/common/CommonFooter.vue'
import DeliveryEntryHero from '@/components/client-delivery-entry/DeliveryEntryHero.vue'
import DeliveryEntryFeatures from '@/components/client-delivery-entry/DeliveryEntryFeatures.vue'
import DeliveryEntryFAQ from '@/components/client-delivery-entry/DeliveryEntryFAQ.vue'
---

<BaseLayout title="寄件服务入口 - 智取未来">
